{
  "info": {
    "_postman_id": "8bbeeac1-7697-4176-9339-d8cc872c7069",
    "name": "Alfa-Bank Case: Automated API Testing",
    "description": "API Automation Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "51441146"
  },
  "item": [
    {
      "name": "Get data",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.id).to.eql(1);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/posts/1",
          "host": ["{{base_url}}"],
          "path": ["posts", "1"]
        }
      }
    },
    {
      "name": "Post data",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Response body matches environment data\", function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.id).to.exist;",
              "    pm.expect(jsonData.name).to.eql(pm.environment.get(\"random_user_name\"));",
              "});",
              "",
              "pm.test(\"Response time is within SLA (<1200ms)\", function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(1200);",
              "});"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "const randomId = Math.floor(Math.random() * 1000);",
              "pm.environment.set(\"random_user_name\", \"User_\" + randomId);",
              "pm.environment.set(\"random_job\", \"Engineer_\" + randomId);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"{{random_user_name}}\",\n    \"job\": \"{{random_job}}\"\n}",
          "options": {
            "raw": { "language": "json" }
          }
        },
        "url": {
          "raw": "{{base_url}}/posts",
          "host": ["{{base_url}}"],
          "path": ["posts"]
        }
      }
    },
    {
      "name": "Update data",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Successful PUT request\", function () {",
              "    pm.expect(pm.response.code).to.be.oneOf([200, 201, 204]);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "PUT",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": ""
        },
        "url": {
          "raw": "{{base_url}}/posts/1",
          "host": ["{{base_url}}"],
          "path": ["posts", "1"]
        }
      }
    },
    {
      "name": "Delete data",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Resource deleted successfully\", function () {",
              "    pm.expect(pm.response.code).to.be.oneOf([200, 204, 202]);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/posts/1",
          "host": ["{{base_url}}"],
          "path": ["posts", "1"]
        }
      }
    }
